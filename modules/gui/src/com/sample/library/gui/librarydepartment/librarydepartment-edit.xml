<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.sample.library.gui.librarydepartment.LibraryDepartmentEdit"
        datasource="libraryDepartmentDs"
        messagesPack="com.sample.library.gui.librarydepartment">
    <dsContext>
        <datasource id="libraryDepartmentDs"
                    class="com.sample.library.entity.LibraryDepartment"
                    view="_local"/>
    </dsContext>
    <layout expand="windowActions"
            margin="true"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="libraryDepartmentDs"
                    width="100%">
            <field id="name"
                   width="100%"/>
        </fieldGroup>
        <iframe id="windowActions"
                height="100%"
                screen="editWindowActions"/>
    </layout>
</window>
