<window xmlns="http://schemas.haulmont.com/cuba/5.2/window.xsd"
        caption="msg://editCaption"
        class="com.sample.library.gui.author.AuthorEdit"
        datasource="authorDs"
        messagesPack="com.sample.library.gui.author">
    <dsContext>
        <datasource id="authorDs"
                    class="com.sample.library.entity.Author"
                    view="_local"/>
    </dsContext>
    <layout expand="windowActions"
            margin="true"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="authorDs"
                    width="350px">
            <field id="firstName"
                   width="100%"/>
            <field id="middleName"
                   width="100%"/>
            <field id="lastName"
                   width="100%"/>
        </fieldGroup>
        <iframe id="windowActions"
                height="100%"
                screen="editWindowActions"/>
    </layout>
</window>
